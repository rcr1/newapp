<h2>Profile Information</h2>

<%= @user.profile.first_name %> <br/>
<%= @user.profile.last_name %> <br/>
<%= @user.profile.job_title %> <br/>
<%= @user.profile.description %> <br/>

<% if current_user.plan_id == 2 %>
    <%= @user.profile.phone_number %> <br/>
    <%= @user.profile.contact_email %>
<% else %>
    <br/>
    <div class='danger'>Upgrade to the pro account to see user details!</div>
<% end%>